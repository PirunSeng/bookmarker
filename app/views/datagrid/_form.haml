= form_for grid, options do |f|
  - grid.filters.each do |filter|
    .datagrid-filter.filter.input-field.col.s12.m4
      = f.datagrid_label filter
      = f.datagrid_filter filter, partials: options[:partials], class: 'validate'
  .datagrid-actions
    = f.button I18n.t("datagrid.form.search").html_safe, :class => "datagrid-submit waves-effect waves-light btn"
    - empty_parameter = Rails.version >= "4.1.0" && Rails.version <= '4.1.2' ? nil : {}
    = link_to I18n.t('datagrid.form.reset').html_safe, url_for(grid.to_param => empty_parameter), :class => "datagrid-reset waves-effect waves-light btn"
