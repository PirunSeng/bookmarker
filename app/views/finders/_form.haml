= simple_form_for @finder do |f|
  .form-group
    = f.input :name, input_html: { class: 'form-control' }
  .form-group
    = f.input :reference, input_html: { class: 'form-control' }
  .form-group
    = f.association :category, prompt: "Select Category", input_html: { class: 'form-control' }
  .form-group
    = f.submit class: 'btn btn-primary'
