!!!
%html
  %head
    %meta{:charset => "utf-8"}
    %meta{:content => "IE=edge", "http-equiv" => "X-UA-Compatible"}
    %meta{:content => "width=device-width, initial-scale=1", :name => "viewport"}
    %title FastFinder
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    %script{:src => "https://use.typekit.net/fpe2ffe.js"}
    :javascript
      try{Typekit.load();}catch(e){}
    = csrf_meta_tags
  %body{ id: "#{controller_name}-#{params[:action]}" }
    = render 'shared/navbar_header'
    .container
      - if notice.present?
        %p.notice= notice
      - if alert.present?
        %p.alert= alert
      .row
        .col-xs-12
          .my-ad
            %script{:async => "", :src => "//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"}
            / Test Ad
            %ins.adsbygoogle{"data-ad-client" => "ca-pub-8665617687113901", "data-ad-format" => "auto", "data-ad-slot" => "6224326673", :style => "display:block"}
            :javascript
              (adsbygoogle = window.adsbygoogle || []).push({});
      = yield
